        <% end %>
      </dd>

      <dt>Capacity</dt>
      <dd><%= @venue.capacity %></dd>

      <dt>Description</dt>
      <dd><%= @venue.description %></dd>

<hr>

      <div class="row">
        <div class="col-md-5">
