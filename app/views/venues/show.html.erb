              <%end%>
              </dd>
          <% end %>

          <% if @venue.drink_3.present? %> <dd><%= @venue.drink_3 %>
              <%if @venue.drink_3_price != 0 %>
              $<%=@venue.drink_3_price%> PP
              <%end%>
              </dd>
          <% end %>

          <% if @venue.drink_4.present? %> <dd><%= @venue.drink_4 %>
              <%if @venue.drink_4_price != 0 %>
              $<%=@venue.drink_4_price%> PP
              <%end%>
              </dd>
          <% end %>

          <% if @venue.drink_5.present? %> <dd><%= @venue.drink_5 %>
              <%if @venue.drink_5_price != 0 %>
